<div class="col-md-6 col-md-offset-3">
	<h1 class="text-center">Contact Code4Share</h1>
	<br />
	<form class="form-horizontal" method="post">
		{{#if errors.length}}
			<div class="alert alert-danger">
				{{#each errors}}
					{{this.message}}
				{{/each}}
			</div>
		{{/if}}
		<div class="form-group">
			<label class="control-label col-sm-2" for="name">Name</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="name" value="{{name}}" placeholder="Jane Doe" autofocus required />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="email">Email</label>
			<div class="col-sm-10">
				<input type="email" class="form-control" id="email" value="{{email}}" placeholder="jane.doe@example.com" required />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="message">Message</label>
			<div class="col-sm-10">
				<textarea id="message" class="form-control" rows="4" required>{{message}}</textarea>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-10 col-sm-offset-2">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</div>
	</form>
</div>
